<div class="post">
    <article class="card">
        <div class="post-card">
            <h2>{{post.title}}</h2>
            <div>~{{post.User.username}} at {{format_date post.createdAt}}</div>
        </div>
        <div class="body">{{post.body}}</div>
    </article>

    {{#if post.Comments}}
        <section class="card">
            <div class="c-header">
                <h3>Comments</h3>
            </div>

            <div class="c-body">
                {{#each post.Comments}}
                    <p>{{body}}</p>
                    <p>{{User.username}}, {{format_date createdAt}}</p>
                {{/each}}
            </div>
        </section>
    {{/if}}

    <form id="new-comment" class="card">
        <div class="c-header">
            <h3>Add Comment</h3>
        </div>
        <div class="c-body">
            <label for="comment">Comment</label>
            <textarea name="comment" class="form-input"></textarea>
            <button type="submit">Submit</button>
        </div>
    </form>
</div>
<script src="/js/comment.js"></script>